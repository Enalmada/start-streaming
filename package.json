{
	"name": "@enalmada/start-streaming",
	"version": "0.1.0",
	"scripts": {
		"build": "turbo build:clear build:script build:declaration build:validate",
		"build:clear": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
		"build:declaration": "tsc --emitDeclarationOnly",
		"build:pack": "bun run build && npm pack",
		"build:script": "cross-env NODE_ENV=production bun build.ts",
		"build:validate": "publint --strict",
		"check": "turbo lint type-check test:unit",
		"dev:website": "cd website && bun run dev",
		"lint": "biome check --fix --unsafe",
		"prepare": "lefthook install",
		"release": "bun run build && bunx changeset publish",
		"test": "turbo test:unit",
		"test:unit": "cross-env NODE_ENV=test vitest run",
		"type-check": "bun --bun tsc --noEmit"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@changesets/cli": "2.29.7",
		"@enalmada/bun-externals": "0.0.9",
		"@scaleway/changesets-renovate": "2.2.1",
		"@tanstack/react-query": "^5.62.11",
		"@tanstack/react-start": "^1.91.10",
		"@types/node": "24.10.0",
		"@types/react": "^19.0.11",
		"cross-env": "10.1.0",
		"fixpack": "4.0.0",
		"lefthook": "2.0.2",
		"publint": "^0.3.15",
		"react": "^19.0.0",
		"turbo": "2.6.0",
		"typescript": "5.9.3",
		"vitest": "4.0.8"
	},
	"peerDependencies": {
		"@tanstack/react-query": "^5.0.0",
		"@tanstack/react-start": "^1.0.0",
		"react": "^18.0.0 || ^19.0.0"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "Adam Lane",
	"description": "Production-ready real-time streaming infrastructure for TanStack Start. Type-safe async generator streaming with auto-reconnection, exponential backoff, React Query integration, and page visibility API.",
	"keywords": [
		"async-generator",
		"backoff",
		"react",
		"react-query",
		"real-time",
		"reconnect",
		"sse",
		"streaming",
		"tanstack",
		"tanstack-start",
		"websocket"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Enalmada/start-streaming/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Enalmada/start-streaming.git"
	},
	"homepage": "https://github.com/Enalmada/start-streaming",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./client": {
			"types": "./dist/client/index.d.ts",
			"import": "./dist/client/index.js",
			"default": "./dist/client/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"import": "./dist/server/index.js",
			"default": "./dist/server/index.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.js",
			"default": "./dist/utils/index.js"
		}
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"files": [
		"dist"
	],
	"packageManager": "bun@1.3.2",
	"peerDependenciesMeta": {
		"@tanstack/react-query": {
			"optional": true
		}
	},
	"sideEffects": false,
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
